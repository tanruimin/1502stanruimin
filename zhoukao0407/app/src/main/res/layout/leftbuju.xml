<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_cc">>


    <TextView
        android:text="@string/log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weibo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textColor="@color/white"
        android:id="@+id/frag1_log"/>

    <ListView
        android:id="@+id/frag1_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frag1_log"
        android:layout_marginBottom="70dp"></ListView>

    <TextView
        android:id="@+id/weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_drawer_weibo"
        android:layout_alignBaseline="@+id/tence"
        android:layout_alignBottom="@+id/tence"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_drawer_tencent"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/frag1_log"
        android:layout_alignEnd="@+id/frag1_log" />

    <TextView
        android:id="@+id/qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_drawer_qzone"


        android:layout_above="@+id/frag1_log"
        android:layout_alignLeft="@+id/frag1_log"
        android:layout_alignStart="@+id/frag1_log" />


</RelativeLayout>
