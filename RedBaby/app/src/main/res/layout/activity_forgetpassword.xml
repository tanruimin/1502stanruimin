<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pub_color_twelev"
    >
    <include
        android:id="@+id/forgetpassword_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        layout="@layout/activity_login_title"
        ></include>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.0dip"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_forget_account"
            style="@style/ETcontainer_logon_register_pub_style"
            android:paddingRight="0.0dip">

            <TextView
                style="@style/text_logon_register"
                android:text="@string/logon_account" />

            <com.erzu.dearbaby.registlogin.view.views.DivEtidActivity
                android:id="@+id/forget_et"
                style="@style/edittext_logon_register_pub_style"
                android:layout_weight="1.0"
                android:divider="@null"
                android:dropDownAnchor="@id/layout_logon_account"
                android:hint="@string/logon_account_hint"
                android:popupBackground="@drawable/drop_down_box_bg"
                android:singleLine="true" />
           </LinearLayout>
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <SeekBar
            android:id="@+id/sb"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_bg"
            android:thumb="@mipmap/commodity_hua_validate_lable_to_right"
            android:thumbOffset="0dp"
            />

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="请按住滑块，拖动到最右边"
            android:textColor="#888888"
            android:textSize="14dp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/sb" />
    </RelativeLayout>
    <Button
        android:id="@+id/forgetpassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_btn_yellow_new_vi"
        android:text="下一步"
        android:textColor="@color/cart2_address_line"
        android:textSize="20sp"
        android:gravity="center"
        android:enabled="false"
        />
    </LinearLayout>


