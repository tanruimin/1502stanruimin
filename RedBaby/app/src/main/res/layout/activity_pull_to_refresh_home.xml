<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:apt="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/pub_color_twelev"
              android:orientation="vertical">

    <include layout="@layout/view_home_searchbar_top"/>

    <RelativeLayout
        android:id="@id/djh_one_menu_rl"
        android:layout_width="fill_parent"
        android:layout_height="43.0dip"
        android:layout_below="@id/home_top_searchbar">

        <android.support.design.widget.TabLayout
            android:id="@+id/home_title_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            apt:tabIndicatorColor="#ff0ce7"
            apt:tabSelectedTextColor="#ff0ce7"
            apt:tabTextColor="#000000">

        </android.support.design.widget.TabLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@id/rob_cate_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/djh_one_menu_rl"/>

    <ImageView
        android:id="@id/move_to_top_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="49.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/move_to_top_img"
        android:scaleType="fitXY"
        android:visibility="gone"/>


</LinearLayout>