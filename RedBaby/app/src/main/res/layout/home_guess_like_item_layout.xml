<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@id/guess_like_layout_product1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/android_public_space_12dp"
        android:layout_weight="1.0"
        android:background="@color/pub_color_one"
        android:orientation="vertical">

        <ImageView
            android:id="@id/img_guess_like_product1"
            android:layout_width="250.0dip"
            android:layout_height="250.0dip"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@id/text_layout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_guess_like_product1"
            android:layout_marginTop="@dimen/android_public_space_12dp"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="@dimen/android_public_space_20dp"
                android:paddingRight="@dimen/android_public_space_20dp">

                <TextView
                    android:id="@id/tv_guess_like_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5.0dip"
                    android:lines="1"
                    android:textColor="@color/color_red_ff5a54"
                    android:textSize="@dimen/android_public_text_size_28px"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/android_public_space_10dp"
                    android:layout_toLeftOf="@id/tv_guess_like_price1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@id/tv_guess_like_proType1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/home_evaluate_pro_icon"
                        android:paddingLeft="@dimen/android_public_space_14dp"
                        android:text="大聚会1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/android_public_text_size_24px"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@id/tv_guess_like_desc1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/android_public_space_5dp"
                        android:layout_marginRight="@dimen/android_public_space_5dp"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="@color/search_color_black_text"
                        android:textSize="16.0sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@id/rl_evaluate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_layout01"
            android:layout_marginTop="@dimen/android_public_space_12dp"
            android:orientation="vertical">

            <TextView
                android:id="@id/tv_evaluate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/android_public_space_12dp"
                android:layout_marginRight="@dimen/android_public_space_12dp"
                android:layout_marginTop="@dimen/android_public_space_15dp"
                android:background="@drawable/home_evaluate_bg"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="@dimen/android_public_space_12dp"
                android:paddingLeft="@dimen/android_public_space_12dp"
                android:paddingRight="@dimen/android_public_space_12dp"
                android:paddingTop="@dimen/android_public_space_35dp"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/android_public_textsize_12sp"/>

            <LinearLayout
                android:id="@id/ll_user_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/img_head"
                    android:layout_width="@dimen/android_public_space_40dp"
                    android:layout_height="@dimen/android_public_space_40dp"
                    android:layout_marginLeft="@dimen/android_public_space_20dp"
                    android:src="@drawable/home_store_card_header_icon"/>

                <TextView
                    android:id="@id/tv_phonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/android_public_space_10dp"
                    android:textColor="@color/evaluate_no_select_color"
                    android:textSize="@dimen/android_public_textsize_13sp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@id/divide_line_left"
        android:layout_width="5.0dip"
        android:layout_height="fill_parent"
        android:background="@color/pub_color_twelev"
        android:visibility="gone"/>

    <View
        android:id="@id/v_home_evaluate_divider"
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:layout_marginTop="@dimen/android_public_space_12dp"
        android:background="@color/color_red_f3f3f3"/>
</LinearLayout>